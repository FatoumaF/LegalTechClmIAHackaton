<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Calendrier</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.15/index.min.css">
    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            display: flex;
        }
        .navbar {
            width: 220px;
            height: 100vh;
            background-color: #f8f9fa; /* Couleur de fond de la navbar */
            color: #343a40;
            padding: 20px;
            position: fixed;
            border-right: 1px solid #ddd;
        }
        .navbar a {
            color: #343a40;
            text-decoration: none;
            display: flex;
            align-items: center;
            margin: 15px 0;
        }
        .navbar a:hover {
            text-decoration: underline;
        }
        .navbar i {
            font-size: 1.5rem;
            margin-right: 10px;
        }
        .main-content {
            margin-left: 220px; /* Décalage pour laisser de la place à la navbar */
            padding: 20px;
            width: calc(100% - 220px);
        }
        /* Style du calendrier */
        #calendar {
            border: 1px solid #ddd;
            border-radius: 5px;
            padding: 10px;
        }
    </style>
</head>
<body>
    <!-- Barre de navigation latérale -->
    <nav class="navbar d-flex flex-column bg-light">
        <a href="{{ path('admin_dashboard') }}" class="nav-link">
            <i class="fa fa-calendar"></i> Calendrier
        </a>
        <a href="#" class="nav-link">
            <i class="fa fa-tasks"></i> Tâches
        </a>
        <a href="#" class="nav-link">
            <i class="fa fa-file"></i> Documents
        </a>
    </nav>

    <!-- Contenu principal -->
    <div class="main-content">
        <div class="container">
            <h1 class="mb-4">Calendrier</h1>
            <div id="calendar" class="p-3 shadow-sm"></div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.15/index.global.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var calendarEl = document.getElementById('calendar');
            var calendar = new FullCalendar.Calendar(calendarEl, {
                initialView: 'dayGridMonth',
                locale: 'fr',
                events: [
                    { title: 'Événement Test 1', start: '2024-10-01' },
                    { title: 'Événement Test 2', start: '2024-10-15' }
                ],
                editable: true,
                selectable: true,
                eventClick: function(info) {
                    var eventDetails = `
                        <div class="modal fade" id="eventModal" tabindex="-1" aria-labelledby="eventModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="eventModalLabel">${info.event.title}</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        Date de l'événement : ${info.event.start.toLocaleDateString()}
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    `;
                    document.body.insertAdjacentHTML('beforeend', eventDetails);
                    var eventModal = new bootstrap.Modal(document.getElementById('eventModal'));
                    eventModal.show();

                    // Remove modal from DOM after hiding
                    document.getElementById('eventModal').addEventListener('hidden.bs.modal', function() {
                        document.getElementById('eventModal').remove();
                    });
                }
            });
            calendar.render();
        });
    </script>
</body>
</html>
